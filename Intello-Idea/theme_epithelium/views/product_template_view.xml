<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_inherit_only_form_view" model="ir.ui.view">
        <field name="name">product.template</field>
        <field name="model">product.template</field>
        <field name="type">qweb</field>
        <field name="key">website.bs_debug_page_view</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!--
            <xpath expr="//header" position="attributes">
                <attribute name="attrs">{'invisible': [('website', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_post" string="Post on website" class="oe_highlight"
                        type="object" groups="account.group_account_invoice"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button string="Reset to Draft" name="action_draft" type="object"
                        attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
            </xpath>
            -->
            <xpath expr="//page[@name='general_information']/group[2]" position="attributes">
                <attribute name="string">Description</attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="attributes">
                <attribute name="attrs">{'required': [('website', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="website" string="Website" attrs="{'invisible': [('website', '!=', True)]}">
                    <group>
                        <group col="2">
                            <field name="website_category" class=""/>
                            <field name="form_magistral"/>
                        </group>
                        <group col="3">
                            <field name="color" class="" widget="color" attrs="{'required': [('website', '=', True)]}"/>
                        </group>
                    </group>
                    <group col="2" style="margin-top:-40px">
                        <group col="1">
                            <group string="Use">
                                <field name="use" nolabel="1"
                                       attrs="{'required': [('website', '=', True)]}" style="width:90%"/>
                            </group>
                        </group>
                        <group col="1">
                            <group string="Tips">
                                <field name="tips" nolabel="1"
                                       attrs="{'required': [('website', '=', True)]}" style="width:90%"/>
                            </group>
                        </group>
                    </group>
                    <group col="2" style="margin-top:-40px">
                        <group col="1">
                            <group string="Benefits">
                                <field name="benefits" nolabel="1"
                                       attrs="{'required': [('website', '=', True)]}" style="width:90%"/>
                            </group>
                        </group>
                        <group col="1">
                            <group string="Presentation">
                                <field name="presentation" nolabel="1"
                                       attrs="{'required': [('website', '=', True)]}" style="width:90%"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Composition">
                            <field name="product_composition" widget="many2many_tags" string="Composition" options="{'no_open':True,'no_create':1,'no_create_edit':1}" />
                        </page>
                        <page string="Product Version">
                            <field name="product_version" mode="kanban"/>
                        </page>
                    </notebook>
                </page>
            </xpath>
            <xpath expr="//div[@name='options']" position="inside">
                <div invisible="context.get('default_website')">
                    <field name="website"/>
                    <label for="website"/>
                </div>
            </xpath>
            <xpath expr="//page[@name='general_information']//field[@name='description']" position="replace">
                <div>
                    <field name="description" widget="html"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Inherit Form View to Modify it -->
    <record id="product_template_inherit_search_view" model="ir.ui.view">
        <field name="name">view.inherit..form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="before">
                <field name="website_category"/>
                <field name="form_magistral"/>

            </xpath>

            <!-- position: after|before|replace|attributes|inside -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <filter string="Category Web Site" name="website_category" context="{'group_by':'website_category'}"/>
                <filter string="Masterly Form Web Site" name="form_magistral" context="{'group_by':'form_magistral'}"/>
            </xpath>

        </field>
    </record>

    <record id="product_website_action" model="ir.actions.act_window">
        <field name="name">Product Website</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('website','=','True')]</field>
        <field name="context">
            {
            'default_website': True,
            }
        </field>
    </record>

</odoo>