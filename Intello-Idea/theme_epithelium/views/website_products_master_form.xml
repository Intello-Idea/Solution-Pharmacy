<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- webpage record -->
        <template id="web_products_forms" name="Productos">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <!-- master forms -->
                    <section class="master_forms category_area">
                        <div class="container text-center" style="min-height: 650px;">
                            <h1>PRODUCTOS TERMINADOS</h1>
                            <h2  t-attf-style="color:{{form_magistral['color']}}" >
                                <t t-esc="form_magistral['name']"/>
                            </h2>
                            <div class="row row-cols-4 mt-5">
                                <t t-foreach="products" t-as="product">
                                    <div class="col-lg-3 product_form_img">
                                        <a t-attf-href="/product/id={{product['id']}}">
                                            <img t-if="product['image_1920']"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(product['image_1920'])"/>
                                        </a>
                                        <h6 class="mt-2">
                                            <t t-esc="product['name']"/>
                                        </h6>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                    <div t-attf-style="background-color:{{form_magistral['color']}};"
                         class="textura_page_transparent">
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>