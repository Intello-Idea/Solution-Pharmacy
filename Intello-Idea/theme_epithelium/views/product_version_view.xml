<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_version_tree_kanban" model="ir.ui.view">
        <field name="name">product.version.kanban</field>
        <field name="model">product.version</field>
        <field name="arch" type="xml">
            <kanban class="o_product_version_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="icon"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="color oe_kanban_color_alert oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="" t-if="record.icon.raw_value"
                                     t-att-src="kanban_image('product.version', 'icon', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div>
                                    <t t-if="record.name.raw_value">
                                        <h6>
                                            <field name="name"></field>
                                        </h6>
                                    </t>
                                </div>
                                <div style="max-height:80px;overflow-y: auto">
                                    <t t-if="record.description.raw_value">
                                        <p>
                                            <field name="description" widget="html" style="max-height:200px"/>
                                        </p>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="product_version_form" model="ir.ui.view">
        <field name="name">product.version</field>
        <field name="model">product.version</field>
        <field name="arch" type="xml">
            <form string="Product Version">
                <sheet>
                    <field name="icon" widget="image" class="oe_avatar"
                           options="{'preview_image': '/web/static/src/img/placeholder.png'}"/>
                    <div class="oe_title" modifiers="{}">
                        <label class="oe_edit_only" for="name" string="Version Name"/>
                        <h1>
                            <field name="name" placeholder="Version Name" modifiers="{'required':true}"/>
                        </h1>
                    </div>
                    <div>
                        <separator string="Description"/>
                        <field name="description" widget="html"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_version_action" model="ir.actions.act_window">
        <field name="name">Product Version</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.version</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="product_version_action_kanban" model="ir.actions.act_window.view">
        <field eval="0" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="product_version_tree_kanban"/>
        <field name="act_window_id" ref="product_version_action"/>
    </record>

    <record id="product_version_action_form" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_version_form"/>
        <field name="act_window_id" ref="product_version_action"/>
    </record>
</odoo>