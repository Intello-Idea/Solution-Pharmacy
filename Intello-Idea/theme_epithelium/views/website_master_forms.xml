<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- webpage record -->
        <template id="web_master_forms" name="Fórmulas Magistrales">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <!-- master forms -->
                    <section class="master_forms category_area">
                        <div class="container text-center" style="min-height: 650px;">
                            <h1>FÓRMULAS MAGISTRALES</h1>
                            <div class="row row-cols-4 mt-5 div_space">
                                <t t-foreach="list_form" t-as="forms">
                                    <t t-foreach="forms" t-as="form">
                                        <div class="col-lg-3" style="">
                                            <a t-attf-href="/master_form/id={{form['id']}}">
                                                <img t-if="form['icon']"
                                                     t-att-src="'data:image/png;base64,%s' % to_text(form['icon'])"/>
                                            </a>
                                            <h6 class="mt-2">
                                                <t t-esc="form['name']"/>
                                            </h6>
                                        </div>
                                    </t>
                                </t>
                            </div>
                        </div>
                    </section>
                    <div class="textura_page">
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>