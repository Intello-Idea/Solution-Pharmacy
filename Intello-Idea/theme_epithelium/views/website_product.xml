<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- webpage record -->
        <template id="web_product" name="Producto">
            <t t-call="website.layout">
                <t t-foreach="product" t-as="pro">
                    <div id="wrap" class="oe_structure oe_empty">

                        <div class="category_area" style="min-height: 650px;">
                            <!-- product -->
                            <div class="container p-2" style="width:100%;">
                                <div class="row no-gutters justify-content-center mt-3">
                                    <div class="col-xl-5 col-lg-6">
                                        <div class="page_category_img">
                                            <img t-if="pro['image_512']"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(pro['image_512'])"
                                                 class="page_product_img mx-auto d-block"
                                            />
                                            <img t-if="not pro['image_512']"
                                                 src="/theme_epithelium/static/src/img/content/content-img-0.png"
                                                 class="page_product_img mx-auto d-block"
                                            />
                                        </div>
                                    </div>
                                    <div class="col-xl-7 col-lg-6">
                                        <div class="category_info text-justify">
                                            <h3 class="text-center">
                                                <t t-esc="pro['name']"/>
                                            </h3>
                                            <p class="text-justify">
                                                <t t-raw="pro['description']"/>
                                            </p>
                                            <div class="row justify-content-center text-center product">
                                                <t t-if="len(pro['product_version']) > 0">
                                                    <t t-foreach="pro['product_version']" t-as="version">
                                                        <div class="mx-auto mb-2 pb-4">
                                                            <img t-if="version['icon']"
                                                                 t-att-src="'data:image/png;base64,%s' % to_text(version['icon'])"
                                                                 t-attf-style="border:{{pro['color']}};border-style: solid;background-color:{{pro['color']}};"
                                                                 class="page_product_img mx-auto d-block"/>
                                                        </div>
                                                    </t>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--/ Composition  -->
                            <section class="mt-5">
                                <div class="container">
                                    <div class="row align-items-center justify-content-center">

                                        <div class="col-md-5" style="width:100%">
                                            <div class="row text-center tabs">
                                                <div class="col-2"/>
                                                <div class="col-8 pt-3">
                                                    <button onclick="show_how_to_use()" class="button-bar active"
                                                            id="nav-home-tab" style="color: white;">
                                                        Como
                                                        usar

                                                    </button>
                                                </div>
                                                <div class="col-2"/>

                                                <div class="col-2"/>
                                                <div class="col-8 pt-3">
                                                    <button onclick="benefits()" class="button-bar"
                                                            id="nav-profile-tab" style="color: white;">
                                                        Beneficios

                                                    </button>
                                                </div>
                                                <div class="col-2"/>

                                                <div class="col-2"/>
                                                <div class="col-8 pt-3">
                                                    <button onclick="composition()" class="button-bar"
                                                            id="nav-contact-tab" style="color: white;">Composici贸n

                                                    </button>
                                                </div>
                                                <div class="col-2"/>

                                                <div class="col-2"/>
                                                <div class="col-8 pt-3">
                                                    <button onclick="presentation()" class="button-bar"
                                                            id="nav-about-tab" style="color: white;">
                                                        Presentaci贸n

                                                    </button>
                                                </div>
                                                <div class="col-2"/>

                                                <div class="col-2"/>
                                                <div class="col-8 pt-3">
                                                    <button onclick="tips()" class="button-bar"
                                                            id="nav-tips-tab" style="color: white;">
                                                        Tips

                                                    </button>
                                                </div>
                                                <div class="col-2"/>

                                                <div class="col-2"/>
                                                <div class="col-8 pt-3">
                                                    <a class="button-bar"
                                                       id="nav-loc"
                                                       href="/home/id_filter_map=0/#section-map"
                                                       style="color: white; display:block;">
                                                        Donde encontrar

                                                    </a>
                                                </div>
                                                <div class="col-2"/>

                                            </div>
