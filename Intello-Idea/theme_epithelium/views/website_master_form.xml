<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- webpage record -->
        <template id="web_master_form" name="Fórmula Magistral">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <!-- form -->
                    <t t-foreach="form" t-as="forms">
                        <div class="category_area p-2">
                            <div class="container p-0" style="min-height: 650px;">
                                <div class="row no-gutters justify-content-center mt-3">
                                    <div class="col-xl-4 col-lg-5">
                                        <div class="page_category_img">
                                            <img t-if="forms['image_description']"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(forms['image_description'])"
                                                 t-attf-style="border:{{forms['color']}};border-style:solid;"/>
                                        </div>
                                        <div class="row align-items-center justify-content-center mt-3">
                                            <div class="page_category_button">
                                                <a href="/info_master_form" class="btn btn-success">COMÓ CONSEGUIR
                                                    TU
                                                    FORMULA MAGISTRAL
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-7 col-lg-6">
                                        <div class="category_info text-justify">
                                            <h3 t-attf-style="color:{{forms['color']}};" class="text-center">
                                                <t t-esc="forms['name']"/>
                                            </h3>
                                            <p class="vert-scroll">
                                                <t t-raw="forms['description']"/>
                                            </p>
                                            <div class="row justify-content-center text-center product mt-5">
                                                <div class="mx-auto mb-2 pb-4">
                                                    <a t-att-href="'data:application/pdf;base64,%s' % to_text(forms['pdf'])"
                                                       t-attf-download="{{forms['name']}}">
                                                        <img src="/theme_epithelium/static/src/img/botones/Botón-1.png"
                                                             class="page_boton_img" alt=""/>
                                                    </a>
                                                </div>
                                                <div class="mx-auto mb-2 pb-4">
                                                    <a href="/master_forms">
                                                        <img src="/theme_epithelium/static/src/img/botones/Botón-2.png"
                                                             class="page_boton_img" alt=""/>
                                                    </a>
                                                </div>
                                                <div class="mx-auto mb-2 pb-4">
                                                    <a href="/home/id_filter_map=0/#section-categories">
                                                        <img src="/theme_epithelium/static/src/img/botones/Botón-3.png"
                                                             class="page_boton_img" alt=""/>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div t-attf-style="background-color:{{forms['color']}};"
                             class="textura_page_transparent">
                        </div>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>