<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it hr_payslip_input -->
        <record id="inherit_hr_payslip_input_type_view_form" model="ir.ui.view">
            <field name="name">inherit_hr_payslip_input_type_view_form</field>
            <field name="model">hr.payslip.input.type</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_input_type_view_form"/>
            <field name="arch" type="xml">


                <field name="country_id" position="after">
                    <field name="input_type" required="1"/>
                </field>
                <field name="code" position="after">
                    <field name="is_active"/>
                </field>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="inherit_hr_payslip_input_type_view_tree" model="ir.ui.view">
            <field name="name">inherit_hr_payslip_input_type_view_tree</field>
            <field name="model">hr.payslip.input.type</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_input_type_view_tree"/>
            <field name="arch" type="xml">

                <field name="struct_ids" position="after">
                    <field name="input_type"/>
                    <field name="is_active"/>
                </field>

            </field>
        </record>


        <!-- Inherit Form View hr_payslip-->
        <record id="hr_payslip_inherit_view_form" model="ir.ui.view">
            <field name="name">hr_payslip_inherit_view_form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <field name="move_id" position="after">
                    <field name="manage_period" invisible="1"/>
                </field>

                <xpath expr="//group[1]" position="replace">
                    <group>

                        <group>
                            <field name="payroll_type_id" options="{'no_create':True,'no_edit':True}" required="1"/>
                            <field name="payroll_period_id" options="{'no_create':True,'no_edit':True, 'no_open':True}"
                                   attrs="{'invisible':[('manage_period','=',False)], 'required':[('manage_period','=',True)]}"
                                   domain="[('payroll_type_id','=',payroll_type_id)]"/>

                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/> - <field name="date_to" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="contract_id"
                                   domain="[('employee_id','=',employee_id),('date_start','&lt;=',date_to),'|',('date_end','&gt;=',date_from),('date_end','=',False)]"
                                   context="{'default_employee_id': employee_id}" required="1"/>
                            <field name="number"/>
                            <field name="struct_id" required="1"/>
                            <field name="name"/>
                            <field name="credit_note" invisible="1"/>
                        </group>

                    </group>
                </xpath>

                <xpath expr="//field[@name='input_line_ids']/tree/field[@name='input_type_id']" position="after">
                    <field name="origin"/>
                    <field name="reference"/>
                    <field name="concept_id" invisible="1"/>
                    <field name="novelty_id" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='date_from']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('state', 'not in', ('draft', 'verify')),
                                                          ('manage_period', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='date_to']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('state', 'not in', ('draft', 'verify')),
                                                          ('manage_period', '=', True)]}</attribute>
                </xpath>


            </field>
        </record>

        <!-- Inherit Form View hr_payslip_run-->
        <record id="hr_payslip_run_inherit_view_form" model="ir.ui.view">
            <field name="name">hr_payslip_run_inherit_view_form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[1]/group[1]/label" position="before">
                    <field name="manage_period" invisible="1"/>
                    <field name="payroll_type_id" options="{'no_create':True,'no_edit':True}" required="1"/>
                    <field name="payroll_period_id" options="{'no_create':True,'no_edit':True, 'no_open':True}"
                           attrs="{'invisible':[('manage_period','=',False)], 'required':[('manage_period','=',True)]}"
                           domain="[('payroll_type_id','=',payroll_type_id)]"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>