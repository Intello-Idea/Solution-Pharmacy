<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Risk Work Tree View -->
        <record id="risk_work_view_tree" model="ir.ui.view">
            <field name="name">risk_work_view_tree</field>
            <field name="model">hr.risk.work</field>
            <field name="arch" type="xml">
                <tree string="risk_work_tree" editable="bottom">
                    <field name="code" width="10%"/>
                    <field name="risk" width="30%"/>
                    <field name="risk_class" width="30%"/>
                    <field name="value" width="30%"/>
                </tree>
            </field>
        </record>

        <!-- Risk Work Action -->
        <record id="risk_work_action" model="ir.actions.act_window">
            <field name="name">Risk Classes and Price</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.risk.work</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>