<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it Res Partner-->
        <record id="res_partner_inherit_view_form" model="ir.ui.view">
            <field name="name">res_partner_inherit_view_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="rrhh" string="RRHH">
                        <group name="employee" attrs="{'invisible':[('company_type','=','company')]}">
                            <group>
                                <field name="is_employee"/>
                            </group>
                        </group>


                        <group name="eps" string="Health Care Provider"
                               attrs="{'invisible':[('company_type','!=','company')]}">
                            <field name="check_eps"/>
                            <field name="eps_code"
                                   attrs="{'invisible':[('check_eps','=',False)],'required':[('check_eps','=',True)]}"/>
                        </group>

                        <group name="arl" string="Occupational Risk Manager"
                               attrs="{'invisible':[('company_type','!=','company')]}">
                            <field name="check_arl"/>
                            <field name="arl_code"
                                   attrs="{'invisible':[('check_arl','=',False)],'required':[('check_arl','=',True)]}"/>
                        </group>

                        <group name="ccf" string="Family Compensation Fund"
                               attrs="{'invisible':[('company_type','!=','company')]}">
                            <field name="check_ccf"/>
                            <field name="ccf_code"
                                   attrs="{'invisible':[('check_ccf','=',False)],'required':[('check_ccf','=',True)]}"/>
                        </group>

                        <group name="afp" string="Pension Fund and Censorship Administrator"
                               attrs="{'invisible':[('company_type','!=','company')]}">
                            <field name="check_afp"/>
                            <field name="afp_code"
                                   attrs="{'invisible':[('check_afp','=',False)],'required':[('check_afp','=',True)]}"/>
                        </group>

                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>