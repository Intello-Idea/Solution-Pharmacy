<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Payroll Type -->
        <record id="hr_payroll_type_view_form" model="ir.ui.view">
            <field name="name">hr_payroll_type_view_form</field>
            <field name="model">hr.payroll.type</field>
            <field name="arch" type="xml">
                <form string="hr_payroll_type_form">
                    <header>
                        <button name="generate_period" string="Generate Periods" class="button" type="object"/>
                        <button name="confirm" string="Confirm" class="button" type="object"/>
                    </header>
                    <sheet>

                        <div>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>

                        <group name="general_information">
                            <group>
                                <field name="manage_periods"/>
                                <field name="periodicity" attrs="{'required':[('manage_periods','=',True)]}"/>
                            </group>
                            <group>
                                <field name="year" attrs="{'required':[('manage_periods','=',True)]}"/>
                                <field name="start_period" attrs="{'required':[('manage_periods','=',True)]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="periods" string="Periods">

                                <field name="line_ids" readonly="1">
                                    <tree editable="top">
                                        <field name="period" width="20%"/>
                                        <field name="date_from" width="20%"/>
                                        <field name="date_to" width="20%"/>
                                        <field name="name" width="20%"/>
                                        <field name="state" width="20%"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_payroll_type_view_tree" model="ir.ui.view">
            <field name="name">hr_payroll_type_view_tree</field>
            <field name="model">hr.payroll.type</field>
            <field name="arch" type="xml">
                <tree string="hr_payroll_type_tree">
                    <field name="name" width="60%"/>
                    <field name="manage_periods" width="40%"/>
                </tree>
            </field>
        </record>


        <record id="hr_payroll_type_action" model="ir.actions.act_window">
            <field name="name">Payroll Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payroll.type</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>