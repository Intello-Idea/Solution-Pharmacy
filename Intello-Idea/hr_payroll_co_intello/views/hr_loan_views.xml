<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- view Form Hr employee loan -->
        <record id="hr_employee_loan_view_form" model="ir.ui.view">
            <field name="name">hr_employee_loan_view_form</field>
            <field name="model">hr.employee.loan</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="calculate_loan" type="object" string="Calculate Loan"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="confirm" type="object" string="Confirm"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="validate" type="object" string="Validate"
                                attrs="{'invisible':[('state','!=','confirmed')]}"/>
                        <button name="cancel" type="object" string="Cancel"
                                attrs="{'invisible':[('state','in',('draft','canceled'))]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Canceled" bg_color="bg-danger"
                                attrs="{'invisible':[('state','!=','canceled')]}"/>
                        <widget name="web_ribbon" title="Paid" attrs="{'invisible':[('state','!=','paid')]}"/>


                        <div>
                            <h1>
                                <field name="name" readonly="1" force_save="1"/>
                            </h1>
                        </div>

                        <group name="general_information">
                            <field name="currency_id" invisible="1"/>
                            <group>
                                <field name="employee_id" required="1" options="{'no_create':True, 'no_edit':True}"/>
                                <field name="contract_id" readonly="1" force_save="1"/>
                                <field name="input_type_id" required="1" options="{'no_create':True, 'no_edit':True}"
                                       domain="[('input_type','=','loan')]"/>
                                <field name="applicable_in" required="1" widget="many2many_tags"
                                       options="{'no_create':True, 'no_edit':True}"/>
                            </group>

                            <group>
                                <field name="request_date" required="1"/>
                                <field name="approval_date" readonly="1" force_save="1"/>
                                <field name="rrhh_manager_id" required="1"
                                       options="{'no_create':True, 'no_edit':True}"/>
                            </group>

                        </group>

                        <group string="Request Detail">

                            <group>
                                <field name="loan_amount" required="1" widget="monetary"/>
                                <field name="quote" required="1"/>
                                <field name="quote_amount" widget="monetary" readonly="1" force_save="1"/>
                                <field name="interest_type" widget="radio" options="{'horizontal': True}"/>
                                <field name="interest_rate"
                                       attrs="{'required':[('interest_type','in',('simple','compound'))],'invisible':[('interest_type','=','no_applicable')]}"/>
                                <field name="interest_input_type_id" options="{'no_create':True, 'no_edit':True}"/>
                            </group>

                            <group>
                                <field name="first_quote_date" required="1"/>
                                <field name="frequency_quote" required="1"/>
                            </group>

                        </group>

                        <notebook>
                            <page string="Quotes" name="quotes">

                                <field name="line_ids" readonly="1">
                                    <tree>
                                        <field name="name" width="12%"/>
                                        <field name="quote" width="12%"/>
                                        <field name="expiration" width="12%"/>
                                        <field name="quote_value" width="12%"/>
                                        <field name="interest" width="12%"/>
                                        <field name="quote_total" width="12%"/>
                                        <field name="balance" width="12%"/>
                                        <field name="state" width="12%"/>
                                    </tree>
                                </field>

                                <group name="balance_information">
                                    <group>

                                    </group>
                                    <group>
                                        <field name="loan_amount"/>
                                        <field name="interest_amount"/>
                                        <field name="total_loan"/>
                                        <field name="paid_mount"/>
                                        <field name="loan_balance"/>
                                    </group>
                                </group>

                            </page>

                        </notebook>

                        <separator string="Description"/>
                        <field name="description" placeholder="Description..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View Hr employee loan -->
        <record id="hr_employee_loan_view_tree" model="ir.ui.view">
            <field name="name">hr_employee_loan_view_tree</field>
            <field name="model">hr.employee.loan</field>
            <field name="arch" type="xml">
                <tree string="hr_employee_loan_tree">
                    <field name="name" width="15%"/>
                    <field name="request_date" width="15%"/>
                    <field name="contract_id" width="15%"/>
                    <field name="employee_id" width="15%"/>
                    <field name="input_type_id" width="15%"/>
                    <field name="loan_amount" width="15%"/>
                    <field name="state" width="10%"/>
                </tree>
            </field>
        </record>

        <!-- Search View Hr Employee Loan -->
        <record id="hr_employee_loan_view_search" model="ir.ui.view">
            <field name="name">hr_employee_loan_view_search</field>
            <field name="model">hr.employee.loan</field>
            <field name="arch" type="xml">
                <search>
                    <group>
                        <filter name="input_type_id" string="Loan Type" context="{'group_by':'input_type_id'}"/>
                        <filter name="contract" string="Contract" context="{'group_by':'contract_id'}"/>
                        <filter name="employee" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="state" string="State" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_employee_loan_action" model="ir.actions.act_window">
            <field name="name">Request Loan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.loan</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Loan Configuration -->
        <record id="hr_employee_loan_configuration_view_form" model="ir.ui.view">
            <field name="name">hr_employee_loan_configuration_view_form</field>
            <field name="model">hr.employee.loan.configuration</field>
            <field name="arch" type="xml">
                <form string="hr_employee_loan_configuration_form">
                    <sheet>
                        <div>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="accounting_journal_id"/>
                                <field name="debit_account_id"/>
                                <field name="credit_account_id"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_loan_configuration_view_tree" model="ir.ui.view">
            <field name="name">hr_employee_loan_configuration_view_tree</field>
            <field name="model">hr.employee.loan.configuration</field>
            <field name="arch" type="xml">
                <tree string="hr_employee_loan_configuration_tree">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="debit_account_id"/>
                    <field name="credit_account_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_loan_configuration_action" model="ir.actions.act_window">
            <field name="name">Loan Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.loan.configuration</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>