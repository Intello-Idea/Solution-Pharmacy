<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View Employee-->
        <record id="hr_employee_inherit_form_view" model="ir.ui.view">
            <field name="name">hr_employee_inherit_form_view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='identification_id']" position="replace"/>

                <xpath expr="//field[@name='country_id']" position="before">
                    <field name="odoo_contact" domain="[('is_employee','=',True)]" required="1"/>
                    <field name="document_type"/>
                    <field name="identification_id"/>
                </xpath>

                <xpath expr="//field[@name='address_home_id']" position="attributes">
                    <attribute name="domain">[('is_employee', '=', True)]</attribute>
                </xpath>

            </field>
        </record>

        <record id="hr_employee_inherit_tree_view" model="ir.ui.view">
            <field name="name">hr_employee_inherit_tree_view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="identification_id"/>
                </xpath>

            </field>
        </record>

        <!-- Cotizante Type -->
        <record id="hr_cotizante_type_view_form" model="ir.ui.view">
            <field name="name">hr_cotizante_type_view_form</field>
            <field name="model">hr.cotizante.type</field>
            <field name="arch" type="xml">
                <form string="hr_cotizante_type_form">
                    <sheet>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                        <group name="general_information">
                            <group>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                            </group>
                        </group>

                        <group name="contributions" string='Contributions' col="3">

                            <group>
                                <field name="eps"/>
                                <field name="arl"/>
                            </group>

                            <group>
                                <field name="afp"/>
                                <field name="ccf"/>
                            </group>

                            <group>
                                <field name="sena"/>
                                <field name="icbf"/>
                            </group>

                        </group>


                        <notebook>
                            <page string="Cotizante Subtypes">
                                <field name="cotizante_subtyá¹•e_ids">
                                    <tree>
                                        <field name="name" width="70%"/>
                                        <field name="code" width="15%"/>
                                        <field name="is_active" width="15%"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Description..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_cotizante_type_view_tree" model="ir.ui.view">
            <field name="name">hr_cotizante_type_view_tree</field>
            <field name="model">hr.cotizante.type</field>
            <field name="arch" type="xml">
                <tree string="hr_cotizante_type_tree">
                    <field name="name" width="60%"/>
                    <field name="code" width="20%"/>
                    <field name="is_active" width="20%"/>
                </tree>
            </field>
        </record>

        <record id="hr_cotizante_type_action" model="ir.actions.act_window">
            <field name="name">Cotizante Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.cotizante.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Cotizante SubType -->
        <record id="hr_cotizante_subtype_view_form" model="ir.ui.view">
            <field name="name">hr_cotizante_subtype_view_form</field>
            <field name="model">hr.cotizante.subtype</field>
            <field name="arch" type="xml">
                <form string="hr_cotizante_type_form" archive="true">
                    <sheet>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cotizante Types">
                                <field name="cotizante_type_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="is_active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Description..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_cotizante_subtype_view_tree" model="ir.ui.view">
            <field name="name">hr_cotizante_subtype_view_tree</field>
            <field name="model">hr.cotizante.subtype</field>
            <field name="arch" type="xml">
                <tree string="hr_cotizante_type_tree">
                    <field name="name" width="60%"/>
                    <field name="code" width="20%"/>
                    <field name="is_active" width="20%"/>
                </tree>
            </field>
        </record>

        <record id="hr_cotizante_subtype_action" model="ir.actions.act_window">
            <field name="name">Cotizante Subtypes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.cotizante.subtype</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>