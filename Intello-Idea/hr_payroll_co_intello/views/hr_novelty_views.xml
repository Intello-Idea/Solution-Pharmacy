<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_novelty_view_form" model="ir.ui.view">
            <field name="name">hr_novelty_view_form</field>
            <field name="model">hr.novelty</field>
            <field name="arch" type="xml">
                <form>

                    <header>

                        <button name="confirm" type="object" string="Confirm"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="validate" type="object" string="Validate"
                                attrs="{'invisible':[('state','!=','confirmed')]}"/>
                        <button name="cancel" type="object" string="Cancel"
                                attrs="{'invisible':[('state','in',('draft','canceled'))]}"/>
                        <button name="go_to_draft" type="object" string="Go To Draft"
                                attrs="{'invisible':[('state','!=','canceled')]}"/>

                        <field name="state" widget="statusbar"/>

                    </header>

                    <sheet>

                        <field name="currency_id" invisible="1"/>

                        <!-- Web Ribbon -->
                        <widget name="web_ribbon" title="Cancel" bg_color="bg-danger"
                                attrs="{'invisible':[('state','!=','canceled')]}"/>
                        <widget name="web_ribbon" title="Paid" attrs="{'invisible':[('state','!=','paid')]}"/>

                        <div>
                            <h1>
                                <field name="name" readonly="1" force_save="1"/>
                            </h1>
                        </div>

                        <group>

                            <group attrs="{'readonly':[('state','!=','draft')]}">
                                <field name="employee_id" required="1" options="{'no_create':True,'no_edit':True}"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="contract_id" readonly="1" force_save="1"/>
                                <field name="applicable_in" required="1"
                                       options="{'no_create':True,'no_edit':True,'no_open':True}"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="novelty_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="input_type_id" required="1" options="{'no_create':True,'no_edit':True}"
                                       domain="[('input_type','=','news')]"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="value" widget="monetary" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>

                            <group attrs="{'readonly':[('state','!=','draft')]}">
                                <field name="creation_date" readonly="1" force_save="1"/>
                                <field name="validation_date" readonly="1" force_save="1"/>
                                <field name="rrhh_manager_id" required="1" options="{'no_create':True,'no_edit':True}"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>

                        </group>

                        <separator string="Pay Slip"/>
                        <field name="input_line_ids" readonly="0" invisible="1"/>
                        <field name="payslip_id"/>

                        <separator string="Description"/>
                        <field name="description"/>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="hr_novelty_view_tree" model="ir.ui.view">
            <field name="name">hr_novelty_view_tree</field>
            <field name="model">hr.novelty</field>
            <field name="arch" type="xml">
                <tree string="hr_novelty_tree">

                    <field name="name"/>
                    <field name="novelty_date"/>
                    <field name="contract_id"/>
                    <field name="employee_id"/>
                    <field name="input_type_id"/>
                    <field name="value"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="hr_novelty_view_search" model="ir.ui.view">
            <field name="name">hr_novelty_view_search</field>
            <field name="model">hr.novelty</field>
            <field name="arch" type="xml">
                <search>

                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="rrhh_manager_id"/>

                    <group>
                        <filter name="input_type_id" string="Novelty" context="{'group_by':'input_type_id'}"/>
                        <filter name="employee" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="contract" string="Contract" context="{'group_by':'contract_id'}"/>
                        <filter name="applicable_in" string="Applicable In" context="{'group_by':'applicable_in'}"/>
                        <filter name="state" string="State" context="{'group_by':'state'}"/>
                    </group>

                </search>
            </field>
        </record>

        <record id="hr_novelty_action" model="ir.actions.act_window">
            <field name="name">Novelties</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.novelty</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="hr_concept_confirm_action" model="ir.actions.server">
            <field name="name">Confirm</field>
            <field name="model_id" ref="hr_payroll_co_intello.model_hr_novelty"/>
            <field name="binding_model_id" ref="hr_payroll_co_intello.model_hr_novelty"/>
            <field name="state">code</field>
            <field name="groups_id" eval="[(4,ref('hr_payroll.group_hr_payroll_manager'))]"></field>
            <field name="code">
                action = records.confirm()
            </field>
        </record>

        <record id="hr_concept_validate_action" model="ir.actions.server">
            <field name="name">Validate</field>
            <field name="model_id" ref="hr_payroll_co_intello.model_hr_novelty"/>
            <field name="binding_model_id" ref="hr_payroll_co_intello.model_hr_novelty"/>
            <field name="groups_id" eval="[(4,ref('hr_payroll.group_hr_payroll_manager'))]"></field>
            <field name="state">code</field>
            <field name="code">
                action = records.validate()
            </field>
        </record>

    </data>
</odoo>