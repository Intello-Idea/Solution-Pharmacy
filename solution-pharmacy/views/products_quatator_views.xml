<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="solution-pharmacy.list">
      <field name="name">Solution-Pharmacy list quatator</field>
      <field name="model">solution.pharmacy.quatator</field>
      <field name="arch" type="xml">
        <tree>
          <field name="partner_id"/>
          <field name="user"/>
          <field name="date"/>
          <field name="size"/>
          <field name="pharmaceutical_form"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="solution-pharmacy.form">
      <field name="name">Solution-Pharmacy form quatator</field>
      <field name="model">solution.pharmacy.quatator</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancel"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="partner_id"/>
                <field name="user"/>
                <field name="pharmaceutical_form"/>
              </group>
              <group>
                <field name="date"/>
                <field name="size"/>
              </group>
            </group>
            <notebook>
              <page string="Product" name="product_line">
                
              </page>
              <page string="Raw material" name="material_line">
                
              </page>
              <page string="Packaging" name="packaging_line">
                
              </page>
              <page string="Tags" name="tags_line">
                
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="solution-pharmacy.action_window">
      <field name="name">Solution-Pharmacy window</field>
      <field name="res_model">solution.pharmacy.quatator</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Solution-Pharmacy" 
              id="solution-pharmacy.menu_root"
              sequence="3"/>

    <!-- menu categories -->

    <menuitem name="Quatator" 
              id="solution-pharmacy.quatator" 
              parent="solution-pharmacy.menu_root" 
              action="solution-pharmacy.action_window"/>
  </data>
</odoo>